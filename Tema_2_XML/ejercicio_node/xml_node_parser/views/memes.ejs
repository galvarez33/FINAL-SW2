<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id="main-content" class="container w-50 p-3 rounded">
        <h1><%= title %></h1>
        <p>Welcome to <%= title %>'s trending posts.</p>
        <% memes.feed.entry.forEach(entry => { %>
            <div class="w-100 mb-3 p-3 meme border rounded">
                <p><strong>Author</strong>: <%= entry.author[0].name %></p>
                <p><strong>Link</strong>: <a href="<%= entry.link[0].$.href %>" class="wrapped"><%= entry.link[0].$.href %></a></p>
                <div class="w-100 pt-3 pb-3 d-flex justify-content-center">
                    <div class="w-75 d-flex justify-content-center">
                        <% if (entry.content[0]._) { %>
                            <%- entry.content[0]._ %>
                        <% } else { %>
                            <p>[Not Available]</p>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
  </body>
</html>
